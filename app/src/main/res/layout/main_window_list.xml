<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/window_info_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/window_board"
            android:elevation="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/window_list_board"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/window_board">

                <TextView
                    android:id="@+id/window_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textColor="#555555"
                    android:text="empty title"
                    android:textSize="15dp"/>

                <View
                    android:id="@+id/window_list_checkbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/check_box_full"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>